<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="300dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="300dip"
        android:background="@drawable/select_dialog_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lcomptitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/entity_list_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#00003366"
                android:gravity="center_horizontal"
                android:text="视频选项"
                android:layout_marginBottom="4dip"
                android:textColor="#FFFFFF"
                android:textSize="19sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="#00C0D8EB"
            android:clickable="true"
            android:gravity="left"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/entity_list_listView"
                android:layout_width="fill_parent"
	            android:layout_marginLeft="6dip"
    	        android:layout_marginRight="6dip"
    	        android:layout_marginTop="3dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="3dip"
                android:divider="@drawable/list_view_divider_line_style"
                android:dividerHeight="1dip" />
        </LinearLayout>
    </LinearLayout>


        <TextView
            android:id="@+id/desc"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dip"
              android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="aa" />
        
         <EditText
            android:id="@+id/dialog_rename"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        

    <LinearLayout
        android:id="@+id/button_gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="35dip"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/reject_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/dialog_config_bnt_style" />

        <Button
            android:id="@+id/reject_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/dialog_cancle_bnt_style"
            android:textColor="#000000" />
    </LinearLayout>

</FrameLayout>